<p id="notice"><%= notice %></p>

<h1>點餐囉</h1>

<table class="table">
  <thead>
    <tr>
      <th>姓名</th>
      <th>電話</th>
      <th>餐點</th>
      <th>價格</th>
      <th>數量</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.Name %></td>
        <td><%= order.Tel %></td>
        <td><%= order.Dish %></td>
        <td><%= order.Price %></td>
        <td><%= order.Number %></td>
        <%# <%= link_to '點餐囉', root_path,class: "navbar-brand" %> 
        <td><%= link_to '顯示' , order, class:  "btn btn-primary" %></td>
        <td><%= link_to '修改' , edit_order_path(order),class:  "btn btn-primary" %></td>
        <td><%= link_to '刪除' , order, method: :delete, data: { confirm: '你確定嗎？' } ,class:  "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

